generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

model LibraryType {
  id       Int       @id @default(autoincrement())
  typeName String
  library  Library[]
}

model LibraryRegion {
  id         Int       @id @default(autoincrement())
  regionName String
  library    Library[]
}

model Language {
  id           Int    @id @default(autoincrement())
  shortLanName String
  longLanName  String
}

model Library {
  id                Int            @id @default(autoincrement())
  typeId            Int
  name              String
  isLawLibrary      Boolean        @default(false)
  isMedLibrary      Boolean        @default(false)
  bibliographic     String[]
  consortia         String[]
  systemVendor      String[]
  opac              Boolean?
  libHomePage       String?
  onlineCatalogPage String?
  libraryNumber     Int
  regionId          Int?
  contactPersonId   Int
  establishedAt     Int?           @default(1900)
  recordUpdatedAt   DateTime       @default(now())
  notes             String?
  libraryRegion     LibraryRegion? @relation(fields: [regionId], references: [id])
  libraryType       LibraryType    @relation(fields: [typeId], references: [id])
  contactPerson     User[]
}

model User {
  id              Int       @id @default(autoincrement())
  firstName       String
  lastName        String
  email           String    @unique
  positionTitle   String?
  workPhone       String?
  faxNumber       String?
  password        String    @default("cealstat2024")
  isActive        Boolean   @default(true)
  role            UserRole  @default(USER)
  recordCreatedAt DateTime? @default(now()) @db.Date
  recordUpdatedAt DateTime  @default(now())
  libraryId       Int?
  Library         Library?  @relation(fields: [libraryId], references: [id])
}

enum UserRole {
  ADMIN
  USER
}
