generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

enum UserRole {
  ADMIN
  USER
}

model LibraryType {
  id      Int       @id @default(autoincrement())
  name    String
  library Library[]
}

model LibraryRegion {
  id         Int       @id @default(autoincrement())
  regionName String
  library    Library[]
}

model Language {
  id           Int    @id @default(autoincrement())
  shortLanName String
  longLanName  String
}

model Library {
  id                Int            @id @default(autoincrement())
  typeId            Int
  libraryType       LibraryType    @relation(fields: [typeId], references: [id])
  name              String
  isLawLibrary      Boolean        @default(false)
  isMedLibrary      Boolean        @default(false)
  bibliographic     String[]
  consortia         String[]
  systemVendor      String[]
  opac              Boolean?
  libHomePage       String?
  onlineCatalogPage String?
  libraryNumber     Int
  regionId          Int?
  libraryRegion     LibraryRegion? @relation(fields: [regionId], references: [id])
  contactPerson     User[]
  lastUpdatedAt     DateTime       @default(now())
  notes             String?
}

model User {
  id            Int       @id @default(autoincrement())
  firstName     String
  lastName      String
  email         String    @unique
  positionTitle String?
  workPhone     String?
  faxNumber     String?
  password      String
  isActive      Boolean   @default(true)
  role          UserRole  @default(USER)
  createdAt     DateTime? @default(now()) @db.Date
  updatedAt     DateTime  @default(now())
  libraryId     Int?
  Library       Library?  @relation(fields: [libraryId], references: [id])
}
